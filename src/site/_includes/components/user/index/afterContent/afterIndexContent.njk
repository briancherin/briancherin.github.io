<h2>Recently updated</h2>

{# collect only items with an updated date, skip homepage #}
{%- set published = [] -%}
{%- for note in collections.note -%}
  {%- if note.url != "/" and note.data.updated -%}
    {%- set published = (published.push(note), published) -%}
  {%- endif -%}
{%- endfor -%}

{# sort descending by updated using built-in sort filter + reverse trick #}
{%- set published = published | sort(false, false, "data.updated") | reverse -%}

<ul>
{%- for note in published | slice(0, 20) -%}
  <li>
    <a href="{{ note.url }}">{{ note.data.title or note.fileSlug }}</a>
    <span style="opacity:0.7;">
      — {{ note.data.updated | humanDate }}
    </span>
  </li>
{%- endfor -%}
</ul>



